@{
  Layout = "Shared/_Layout.cshtml";
}

<h3>Add a new contact here</h3>
<div id="newContact">
  <form class="form-control" action="/contacts/addnew" method="post">
  <label for="contactName">Name:</label>
  <input type="text" id="contactName" name="contactName">
  <label for="contactEmail">Email:</label>
  <input type="text" id="contactEmail" name="contactEmail">
  <label for="contactPhone">Phone:</label>
  <input type="text" id="contactPhone" name="contactPhone">
  <button type="submit" name="button">Add the contact</button>
  </form>
</div>
